<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Website Traffic by Country</title>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/@material-ui/core@4.12.4/dist/css/material-ui.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Website Traffic Analytics</h1>
        <p id="user"></p>
        <p id="network"></p>
      </div>

      <div class="card">
        <div class="stats-summary">
          <div class="stat-box">
            <h3>Total Visits</h3>
            <p id="totalVisits">0</p>
          </div>
          <div class="stat-box">
            <h3>Top Country</h3>
            <p id="topCountry">-</p>
          </div>
        </div>
        <div class="chart-controls">
          <button class="button" onclick="sortData('asc')">
            Sort Ascending
          </button>
          <button class="button" onclick="sortData('desc')">
            Sort Descending
          </button>
          <button class="button" onclick="toggleTopCountries()">
            Show Top 10
          </button>
        </div>
        <div class="chart-container">
          <canvas id="trafficChart"></canvas>
        </div>
      </div>
    </div>
    <script src="script.js"></script>
  </body>
</html>
